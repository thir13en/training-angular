{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@environments/*": ["src/environments/*"],
      "@img/*": ["src/assets/img/*"],
      "@core/*": ["apps/adminloopz/src/app/core/*"],
      "@features/*": ["src/app/features/*"],
      "@layout/*": ["apps/adminloopz/src/app/layout/*"],
      "@network/*": ["src/app/network/*"],
      "@shared/*": ["src/app/shared/*"],
      "@store/*": ["src/app/store/*"],
      "@testing/*": ["src/app/testing/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
